{{> header}}
{{> navigation}}

<div class="container mt-4">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="javascript:history.back()" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <div class="row">
        <!-- User Profile Section -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    {{#user.avatar}}
                        <img src="data:image/png;base64,{{user.avatar}}" 
                             class="rounded-circle mb-3" 
                             alt="User Avatar" 
                             width="150" 
                             height="150">
                    {{/user.avatar}}
                    {{^user.avatar}}
                        <img src="/images/default-avatar.png" 
                             class="rounded-circle mb-3" 
                             alt="Default Avatar" 
                             width="150" 
                             height="150">
                    {{/user.avatar}}
                    
                    <h3 class="card-title">{{user.userName}}</h3>
                    
                    <div class="text-start mt-4">
                        <p><i class="bi bi-envelope"></i> <strong>Email:</strong> {{user.email}}</p>
                        <p><i class="bi bi-geo-alt"></i> <strong>Location:</strong> {{user.address}}</p>
                        <p><i class="bi bi-person-lines-fill"></i> <strong>Bio:</strong></p>
                        <p class="text-muted">{{user.bio}}</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Public Trips Section -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4 class="mb-0">Public Trips</h4>
                </div>
                <div class="card-body">
                    {{#publicTrips}}
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h5 class="card-title">{{tripName}}</h5>
                                        <p class="card-text">
                                            <i class="bi bi-geo-alt"></i> {{location}}<br>
                                            <i class="bi bi-calendar"></i> {{startDate}} - {{endDate}}<br>
                                            <i class="bi bi-people"></i> {{companionsCount}}/{{maxCompanions}} companions
                                        </p>
                                        <span class="badge bg-info">{{tripType}}</span>
                                        {{#isPlanned}}
                                            <span class="badge bg-primary">Planned</span>
                                        {{/isPlanned}}
                                    </div>
                                    <div class="d-flex flex-column align-items-end">
                                        {{#alreadyRequested}}
                                            <span class="badge mb-2
                                                {{#isPending}}bg-warning{{/isPending}}
                                                {{#isApproved}}bg-success{{/isApproved}}
                                                {{#isRejected}}bg-danger{{/isRejected}}">
                                                {{status}}
                                            </span>
                                            {{#isPending}}
                                                <form method="POST" action="/trips/request/{{requestId}}/cancel">
                                                    <button type="submit" class="btn btn-warning btn-sm">
                                                        Cancel Request
                                                    </button>
                                                </form>
                                            {{/isPending}}
                                        {{/alreadyRequested}}
                                        {{^alreadyRequested}}
                                            {{#isPlanned}}
                                                {{#hasRoomForCompanions}}
                                                    <button class="btn btn-primary btn-sm" 
                                                            onclick="showJoinTripModal({{tripId}})">
                                                        Request to Join
                                                    </button>
                                                {{/hasRoomForCompanions}}
                                                {{^hasRoomForCompanions}}
                                                    <button class="btn btn-secondary btn-sm" disabled>
                                                        Trip Full
                                                    </button>
                                                {{/hasRoomForCompanions}}
                                            {{/isPlanned}}
                                        {{/alreadyRequested}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/publicTrips}}
                    {{^publicTrips}}
                        <p class="text-muted">No public trips available.</p>
                    {{/publicTrips}}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Join Trip Modal -->
<div class="modal fade" id="joinTripModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Request to Join Trip</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="joinTripForm" action="/trips/join" method="POST">
                <div class="modal-body">
                    <input type="hidden" id="tripId" name="tripId">
                    <div class="mb-3">
                        <label for="message" class="form-label">Message to Trip Owner</label>
                        <textarea class="form-control" id="message" name="message" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Send Request</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function showJoinTripModal(tripId) {
    document.getElementById('tripId').value = tripId;
    new bootstrap.Modal(document.getElementById('joinTripModal')).show();
}
</script>

{{> footer}} 