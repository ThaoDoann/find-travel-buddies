{{> header}}
{{> navigation}}

<div class="container mt-4">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="/trips" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Back to All Trips
        </a>
    </div>

    <!-- Trip Details Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h1 class="card-title mb-4">{{trip.name}}</h1>
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-2"><i class="bi bi-geo-alt"></i> <strong>Location:</strong> {{trip.location}}</p>
                    <p class="mb-2"><i class="bi bi-calendar-event"></i> <strong>Start Date:</strong> {{trip.startDate}}</p>
                    <p class="mb-2"><i class="bi bi-calendar-check"></i> <strong>End Date:</strong> {{trip.endDate}}</p>
                </div>
                <div class="col-md-6">
                    <p class="mb-2"><i class="bi bi-wallet2"></i> <strong>Budget:</strong> ${{trip.budget}}</p>
                    <p class="mb-2"><i class="bi bi-people"></i> <strong>Current Companions:</strong> {{trip.companionsCount}} / {{trip.maxCompanions}}</p>
                </div>
            </div>
            <div class="mt-3">
                <p class="mb-0"><i class="bi bi-chat-dots"></i> <strong>Description:</strong> {{trip.description}}</p>
            </div>
        </div>
    </div>

    <!-- Trip Requests Section -->
    <div class="row">
        <!-- Pending Requests -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-warning text-white">
                    <h5 class="card-title mb-0">Pending Requests</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        {{#tripRequests}}
                            {{#isPending}}
                                <li class="list-group-item">
                                    <div class="d-flex align-items-center">
                                        {{#avatar}}
                                            <img src="data:image/png;base64,{{avatar}}" class="rounded-circle me-2" alt="User Avatar" width="40" height="40">
                                        {{/avatar}}
                                        {{^avatar}}
                                            <img src="/images/default-avatar.png" class="rounded-circle me-2" alt="Default Avatar" width="40" height="40">
                                        {{/avatar}}
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0">{{userName}}</h6>
                                        </div>
                                        {{#trip}}
                                            {{#hasRoomForCompanions}}
                                                <form method="post" action="/trips/{{tripId}}/{{requestId}}/action" class="d-flex gap-2">
                                                    <button type="submit" name="action" value="Approved" class="btn btn-success btn-sm">Approve</button>
                                                    <button type="submit" name="action" value="Rejected" class="btn btn-danger btn-sm">Reject</button>
                                                </form>
                                            {{/hasRoomForCompanions}}
                                        {{/trip}}
                                    </div>
                                </li>
                            {{/isPending}}
                        {{/tripRequests}}
                    </ul>
                </div>
            </div>
        </div>

        <!-- Approved Requests -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">Approved Requests</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        {{#tripRequests}}
                            {{#isApproved}}
                                <li class="list-group-item">
                                    <div class="d-flex align-items-center">
                                        {{#avatar}}
                                            <img src="data:image/png;base64,{{avatar}}" class="rounded-circle me-2" alt="User Avatar" width="40" height="40">
                                        {{/avatar}}
                                        {{^avatar}}
                                            <img src="/images/default-avatar.png" class="rounded-circle me-2" alt="Default Avatar" width="40" height="40">
                                        {{/avatar}}
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0">{{userName}}</h6>
                                        </div>
                                        <form method="post" action="/trips/{{tripId}}/{{requestId}}/action">
                                            <button type="submit" name="action" value="Pending" class="btn btn-warning btn-sm">Revert to Pending</button>
                                        </form>
                                    </div>
                                </li>
                            {{/isApproved}}
                        {{/tripRequests}}
                    </ul>
                </div>
            </div>
        </div>

        <!-- Rejected Requests -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">Rejected Requests</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        {{#tripRequests}}
                            {{#isRejected}}
                                <li class="list-group-item">
                                    <div class="d-flex align-items-center">
                                        {{#avatar}}
                                            <img src="data:image/png;base64,{{avatar}}" class="rounded-circle me-2" alt="User Avatar" width="40" height="40">
                                        {{/avatar}}
                                        {{^avatar}}
                                            <img src="/images/default-avatar.png" class="rounded-circle me-2" alt="Default Avatar" width="40" height="40">
                                        {{/avatar}}
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0">{{userName}}</h6>
                                        </div>
                                        <form method="post" action="/trips/{{tripId}}/{{requestId}}/action">
                                            <button type="submit" name="action" value="Pending" class="btn btn-warning btn-sm">Revert to Pending</button>
                                        </form>
                                    </div>
                                </li>
                            {{/isRejected}}
                        {{/tripRequests}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

{{> footer}}
